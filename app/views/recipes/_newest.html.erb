
	<h3>Newest Recipes:</h3>
	
	    <% @newest.each do |recipe| %>
	    <div class="span2">
	    	<h4>
	   	 <%= link_to recipe.name.titleize, recipe_path(recipe) %>
	   	</h4>
	   	 
	   	 <%= link_to image_tag(recipe.recipeimage_url(:thumb).to_s, :title => recipe.name), { :action => :show, :id => recipe.id, :controller => :recipes } %>
	   	</div>
	    <% end %>
	

<div class="clearfix visible-xs"></div>