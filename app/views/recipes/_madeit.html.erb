<div id="madeit">
<% if @alreadysaved.nil? %>
	<%= form_for([current_user.pantry_items.build], remote: true) do |f| %>
			<div><%= hidden_field_tag :recipe_id, @recipe.id %></div>
		<%= f.submit "I Made This!", class: "btn btn-small btn-primary" %>
	<% end %>
<% else %>
	<%= form_for([current_user.pantry_items.build], remote: true) do |f| %>
			<div><%= hidden_field_tag :recipe_id, @recipe.id %></div>
		<%= f.submit "Make it Again?", class: "btn btn-small btn-primary" %>
	<% end %>
<% end %>
</div>