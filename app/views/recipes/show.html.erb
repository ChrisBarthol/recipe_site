<% provide(:title, @recipe.name.titleize) %>
<% @body_class = "recipe" %>

<div>


<div class="center hero-unit">
  <aside class="span6">
    <section>

      <h1>
        <%= @recipe.name.titleize %>
      </h1>
      <h3>
              Submitted by <%= @recipe.user.name %>
            </h3>

    </section>
  </aside>

  <aside class="span4">
      <%= image_tag @recipe.recipeimage_url(:thumb).to_s %>
  </aside>

  

  <!-- Links to fork and editing pages  -->

   <div class="span14">

    <%= link_to "Random Recipe", '#' %>
    
    ||

    <%= link_to "Fork this recipe", fork_recipe_path(@recipe) if signed_in? %>
    ||
    <%= link_to "Edit this Recipe", edit_recipe_path(@recipe) if current_user?(@recipe.user) %>
    
    <%= render 'saverecipe_form' if signed_in? %>
  </div>

  <!--  Recipe Description and Directions -->

  <aside class="span12">
    </section>
      <p>
        <div>
      <h2>
        <%= @recipe.description %>
      </h2>
      <p>
      </p>
      <p>
        <div id="directiontitle">
          <h3>
          Directions
        </h3>
        </div>

      </p>
        <%= @recipe.direction %>
        <%= @recipe.user_id %>
      </div>
      </p>
    </section>
  </aside>


  
  <!--   Ingredient list  -->
  <div class="span12">
    <% if @recipe.ingredients.any? %>
      <h3>Ingredients (<%= @recipe.ingredients.count %>)</h3>
        <span class ="span12">
            <div class="span4">Ingredient   </div>
            <div class="span2">Quantity</div>
        </span>
      <ol class="ingredients">
        <%= render @ingredients %>
      </ol>
    <% end %>
  </div>

  <!--   Carousel Example  -->
<aside class ="span12">
 <div class="container">
    <h1>Use Your Leftover Ingredients!</h1>
    <h2> Select an Ingredient to See Recipes.</h2>
        <div id="myCarousel" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Carousel items -->
            <div class="carousel-inner">
                <div class="active item"><img src="http://dummyimage.com/960x500/fff/000" alt="Slide 1"></div>
                <div class="item"><img src="http://dummyimage.com/960x500/fff/000" alt="Slide 2"></div>
                <div class="item"><img src="http://dummyimage.com/960x500/fff/000" alt="Slide 3"></div>
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div><!--//container-->
  </aside>


  <!--  Comment Form and comments   -->
  <div class="row" id="comment_form">
    <aside class="span8">
      <section>
        <%= render 'shared/comment_form' %>
      </section>
    </aside>
  </div>
  <div class="row">
    <aside class="span12">
      <section>
       <%= render @commentfeed %>
      </section>
    </aside>
  </div>

</div>
</div>