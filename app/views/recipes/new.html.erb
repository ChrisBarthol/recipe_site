<% provide(:title, 'Add a recipe') %>
<h1>Add a recipe</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@recipe) do |f| %>
      

	  <%= f.label :name %>
	  <%= f.text_field :name %>

	  <%= f.label :description %>
	  <%= f.text_field :description %>
      <%= f.submit "Create this recipe", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
