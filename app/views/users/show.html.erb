<% @body_class = "about" %>
<% provide(:title, @user.name) %>

<div class="center hero-unit">
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
	<section>
    <%= render 'shared/stats' %>
    </section>
    <div class="span8">
    	<%= render 'follow_form' if signed_in? %>
    </div>
</div>
 <div class="span8">
    <% if @user.comments.any? %>
      <h3>Comments (<%= @user.comments.count %>)</h3>
      <ol class="comments">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>