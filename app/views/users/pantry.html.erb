<% @body_class = "about" %>
<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Recipes:</b> <%= @user.recipes.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="row">
    <span class="span6">
   
      <h3>Add an Ingredient to Your Pantry </h3>
    <%= form_tag({controller: "ingredients", action: "create"}, :method => "post") do %>
      <p>
        <%= label_tag(:name, "Ingredient Name") %>
        <%= text_field_tag :name %>
        <%= label_tag(:quantity, "Quantity") %>
        <%= text_field_tag :quantity %>
        <%= label_tag(:unit, "Units") %>
        <%= text_field_tag :unit %>
      </p>
      <div class="center"><%= submit_tag("Add Ingredient to Pantry", class: "btn btn-small btn-primary") %></div>
    <% end %>
    </span>
  </div>
  <div class="span12">
    <h3>Made Recipes</h3>
    <% if @user.made_recipes.any? %>
      <ul class="users">
        <%= render @user.made_recipes %>
      </ul>
      
    <% end %>
  </div>
  <div class="span6">
    <h3><%= @title %></h3>
    <% if @pantry_items.any? %>
      <ul class="users">
        <%= render partial: "ingredients/pantry_item", collection: @user.ingredients, as: :ingredient %>
       
      </ul>
      
    <% end %>
  </div>
</div>