<% @body_class = "about" %>
<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Recipes:</b> <%= @user.recipes.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="row">
    <span class="span6">
      <h3>Add an Ingredient to Your Pantry </h3>
    <%= form_tag({controller: "ingredients", action: "create"}, :method => "get") do %>
      <p>
        <%= label_tag(:name, "Ingredient Name") %>
        <%= text_field_tag :name %>
        <%= label_tag(:quantity, "Quantity") %>
        <%= text_field_tag :quantity %>
        <%= label_tag(:unit, "Units") %>
        <%= text_field_tag :unit %>
        <%= submit_tag("Add Ingredient to Panty") %>
      </p>
    <% end %>
    </span>
  </div>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @pantry_items.any? %>
      <ul class="users">
        <%= render @pantry_items %>
      </ul>
      
    <% end %>
  </div>
</div>