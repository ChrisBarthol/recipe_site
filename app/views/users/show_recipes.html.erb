<% @body_class = "about" %>
<% provide(:title, @title) %>
<div class="row">
  <aside class="span6">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Recipes:</b> <%= @user.recipes.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>

    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @user.recipes.any? %>
      <ul class="users">
        <%= render @user.recipes %>
      </ul>
      <%= will_paginate @recipe %>
    <% end %>
  </div>
</div>