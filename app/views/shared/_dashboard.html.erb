<% @body_class = "about" %>
<div class = "center">
    <h1> Use Your Foodle! </h1>
    <h2> Help elminate food waste!  Here are your most important items. </h2>
</div>

<div class="center">
    <%= render 'shared/user_info' %>
    <div class="clearfix visible-xs"></div>
    <div id="center-stats">
        <%= render 'shared/stats' %>
    </div>
    <div id="search">
              <%= form_tag({controller: "recipes", action: "search"}, :method => "get") do %>
                <p>
                  <%= label_tag(:search, "Search for:") %>
                  <%= text_field_tag(:search, params[:search])%>
                  <%= submit_tag("Search", :name => nil) %>
                </p>
              <% end %>
    </div>
    <div class="clearfix visible-xs"></div>
    <div id="dashboard_links">
  ||<%= link_to "Add a Recipe", newrecipe_path, class: "btn btn-large btn-primary" %> ||
  <%= link_to "Random Recipe", { :action => :show, :id => Recipe.order('random()').first.id, :controller => :recipes }, class: "btn btn-large btn-primary" %> ||
  <%= link_to "Search for Recipes", '#', class: "btn btn-large btn-primary" %>||
</div>
</div>


<div class="clearfix visible-xs"></div>
<%= render 'recipes/newest' %>


	<h3>Saved Recipes</h3>
	<ul class="users">
	<%= render current_user.saved_recipes %>
</ul>
    <h3>Recent Comments</h3>
    <%= render 'shared/feed' %>
