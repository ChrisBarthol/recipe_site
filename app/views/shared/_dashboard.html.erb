<% @body_class = "about" %>
<div class = "center">
    <h1> Use Your Foodle! </h1>
    <h2> Help elminate food waste!  Here are your most important items. </h2>
</div>

<div class="center">
  <%= render 'shared/user_info' %>
  <div class="clearfix visible-xs"></div>
  <div id="center-stats">
      <%= render 'shared/stats' %>
  </div>

  <div id="dashboard_links">
            <%= form_tag({controller: "recipes", action: "search"}, :method => "get") do %>
            
                <%= label_tag(:query, "Search for:") %>
                <div class=" well">
                  
                <%= text_field_tag :query, params[:query], placeholder: "Search for..." %>

              </div>
            <% end %>
  
  <div class="clearfix visible-xs"></div>
  
    ||<%= link_to "Add a Recipe", newrecipe_path, class: "btn btn-large btn-primary" %> ||
    <%= link_to "Search for Recipes", '#', class: "btn btn-large btn-primary" %>||
  </div>
</div>


<div class="clearfix visible-xs"></div>
<div class="span12">
<%= render 'recipes/newest' %>
</div>
<div class="clearfix visible-xs"></div>
<div>
	<h3>Saved Recipes</h3>
	<ul class="users">
	 <%= render current_user.saved_recipes %>
  </ul>
  <h3>Recent Comments</h3>
  <%= render 'shared/feed' %>
</div>
