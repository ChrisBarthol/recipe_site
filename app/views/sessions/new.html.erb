<% provide(:title, "Sign in") %>
<% @body_class = "about" %>
<h1>Sign in</h1>

<div class="container">
  <div class="inner">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <div class="center">
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    </div>
    <% end %>

    <div class="center">New user? <%= link_to "Sign up now!", signup_path %></div>
  </div>
</div>