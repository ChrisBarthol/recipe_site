<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'bwtomato2.png' %>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true, :cache => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>

 
    

  <body class = <%= @body_class || "none" %> >
    <%= render 'layouts/header' %>
    

      <% flash.each do |name, msg| %>
      <div class="alert alert-<%=(name == :notice && 'success' or name == :warning && 'warning' or name == :info && 'info' or 'error')%>">

        <a class="close" data-dismiss="alert">Ã—</a>
        <%= msg %>
      </div>
      <% end %>
      <%= yield %>

    <%= render 'layouts/footer' %>
  </body>
</html>